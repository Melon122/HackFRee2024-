{
    "manifest_version": 3,
    "name": "Chrome Extension with React & Webpack Template: Bias Identification Service",
    "description": "Runs a bias detector script when the user clicks the action toolbar icon while on a social media(Twitter).",
    "background": { "service_worker": "service_worker.js" },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/bias_identification_service logo.jpg.png"
    },
    "icons": {
      "icon": "assets/bias_identification_service logo.jpg.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*", "<all_urls>"],
        "js": ["content.js"]
      },
      
      {
        "matches": ["https://twitter.com/*/status/*"],
        "js": ["./scripts/tweet.js"],
        "css": ["./scrips/tweet.css"]
      }
    ]
  }
  